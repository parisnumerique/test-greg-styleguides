include ../../modules/button/button

mixin error-heading(data)
  .error-heading(class=data.modifiers)
    .error-heading-wrapper.layout-wrapper(style= data.background ? "background-image: url(#{data.background})" : "")
      a.error-heading-logo(href=data.logo.href title=data.logo.title)
        .error-heading-logo-nef
        .error-heading-logo-paris= data.logo.text
      .error-heading-content
        if data.title
          h1= data.title
        if data.trace
          p.error-heading-trace= data.trace
        if data.button
          - var button = JSON.parse(JSON.stringify(data.button || [])) // clone the data object
          - button.modifiers = button.modifiers || []
          - button.modifiers.push("white")
          +button(button)
