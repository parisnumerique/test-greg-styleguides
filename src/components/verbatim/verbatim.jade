include ../../modules/share/share

mixin verbatim(opts)
  blockquote.component-verbatim
    p.verbatim-text= opts.quote
    footer
      .verbatim-separate
      cite
        .verbatim-author
          = opts.author
          | ,
        .verbatim-function= opts.function
      - share = Object.create(opts.share) // clone the data object
      - share.modifiers = ["circles"] // overwrite the modifiers
      +share(share)
