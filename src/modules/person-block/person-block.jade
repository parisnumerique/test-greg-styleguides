include ../../components/buttons/buttons

mixin person-block(data)
  .person-block
    .person-block-portrait: span(style="background-image: url(#{data.image});")
    .person-block-content
      h3.person-block-title
        a(href=data.href)= data.title
      .person-block-text= data.text
    .person-block-button
      - var button = JSON.parse(JSON.stringify(data.button)) // clone the data object
      - button.href = data.href
      - button.icon = "arrow-right"
      - button.modifiers = ["action"] // overwrite the modifiers
      +button(button)
