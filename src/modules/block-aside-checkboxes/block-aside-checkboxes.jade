include ../block-aside/block-aside

mixin block-aside-checkboxes(data)
  - var modifiers = data.modifiers || []
  - modifiers.push("block-aside-checkboxes")
  if data.title!='Arrondissement'
    +block-aside({"title": data.title, "title_id": "filter-#{data.name}", "modifiers": modifiers})
      ul.block-aside-items
        each item in data.items
          li.block-aside-item(class=item.modifiers)
            a(href="?#{data.name}[]=#{item.value}" data-name="#{data.name}" data-value="#{item.value}" class={checked: item.checked})
              .block-aside-item-checkbox
              .block-aside-item-text
                = item.text
                  if item.number
                    |  (#{item.number})
      select.block-aside-select(multiple name="#{data.name}[]")
        each item in data.items
          option(value=item.value selected=item.checked)
            = item.text
            if item.number
              |  (#{item.number})
